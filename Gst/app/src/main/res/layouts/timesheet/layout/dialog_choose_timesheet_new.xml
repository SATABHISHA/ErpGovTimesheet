<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/btn_employee"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F0EEEE">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_emp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/img_emp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/briefcase"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC"/>
        <RelativeLayout
            android:id="@+id/btn_supervisor"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="gone"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supervisor"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_sup"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/img_sup"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/supervisor"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_payroll_clerk"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="gone"
            android:background="#F0EEEE">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payroll Clerk"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_payroll_clerk"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/img_payroll_clerk"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/payrollopt"/>
        </RelativeLayout>
       <!-- <Button
            android:id="@+id/btn_payable_clerk"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:textAppearance="@style/MyCustomTabText"
            android:background="#ffffff"
            android:visibility="gone"
            android:text="Payable Clerk"/> -->
        <RelativeLayout
            android:id="@+id/btn_payable_clerk"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="gone"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payable Clerk"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_payable_clerk"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/img_payable_clerk"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/payableopt"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>