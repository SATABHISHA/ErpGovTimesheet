<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/cordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2e5772"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#2e5772"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
        <!--android:background="?attr/colorPrimary" -->

    </android.support.design.widget.AppBarLayout>
   <!-- <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"> -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:background="#e4e4e4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="#e4e4e4"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_ts_wkhrs_update_empname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Hamilton John"
                        android:textStyle="normal"
                        android:textSize="18dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="0dp">

                        <ImageButton
                            android:id="@+id/imgbtn_ts_wrkhrs_prev"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/backarrow" />

                        <TextView
                            android:id="@+id/tv_ts_wrkhrs_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:text="09-10-2018"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tv_ts_wrkhrs_dayname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:text="M"
                            android:textSize="12dp"
                            android:textStyle="normal" />

                        <ImageButton
                            android:id="@+id/imgbtn_ts_wrkhrs_next"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/frontarrow" />

                        <TextView
                            android:id="@+id/tv_ts_wrkhrs_date_period"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_ts_wrkhrs_date"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:text="(09-10-2018 To 09-16-2018)" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="#d7d7d7"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/tv_ts_wrkhrs_totalhrs"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="0dp"
                            android:gravity="center"
                            android:background="@drawable/employee_note_round" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:layout_toLeftOf="@id/tv_ts_wrkhrs_totalhrs"
                            android:text="Day Total Hour(s)"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:padding="0dp"
                app:cardElevation="0dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:background="#2e5772">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="Assigned Task(s)"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text="Hour(s)"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />
                    </RelativeLayout>
                       <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:scrollbars="vertical" />
                  <!--  <ListView
                        android:id="@+id/lv_workhrs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e4e4e4"
                        android:descendantFocusability="afterDescendants"
                        android:focusable="true"
                        android:focusableInTouchMode="true"></ListView> -->
                </LinearLayout>
            </android.support.v7.widget.CardView>



            <!--    <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    android:background="#d7d7d7"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"> -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#f4f1f1"
                app:cardCornerRadius="0dp"
                app:cardElevation="30dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:text="Back"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="#2e577f" />
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#e9e3e3"></LinearLayout>
                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:background="#ffffff"
                        android:text="Save"
                        android:textAlignment="center"
                        android:textColor="#2e577f" />
            </LinearLayout>
            </android.support.v7.widget.CardView>
           <!--     </RelativeLayout> -->
        </LinearLayout>

    </FrameLayout>
   <!-- </android.support.v4.widget.NestedScrollView> -->
</android.support.design.widget.CoordinatorLayout>