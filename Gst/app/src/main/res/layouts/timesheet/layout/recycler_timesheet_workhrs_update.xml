<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f8f8f8"> for future backup color code -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        android:orientation="horizontal">
   <RelativeLayout
       android:id="@+id/relative_task"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:paddingTop="2dp"
       android:paddingLeft="3dp"
       android:paddingRight="3dp"
       android:paddingBottom="5dp"
       android:layout_weight="1"
       android:background="#f3f3f3">
       <TextView
           android:id="@+id/tv_rcl_ts_wkhsupdte_glcode"
           android:layout_width="250dp"
           android:layout_height="wrap_content"
           android:textStyle="normal"
           android:textSize="17dp"
           android:paddingTop="0dp"
           android:paddingBottom="0dp"
           android:paddingLeft="4dp"
           android:text="3550-001-02"/>
       <TextView
           android:id="@+id/tv_rcl_ts_wkhsupdte_taskdescription"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="13dp"
           android:textStyle="bold"
           android:layout_toLeftOf="@id/linear_btn"
           android:layout_marginRight="5dp"
           android:layout_marginTop="0dp"
           android:paddingTop="0dp"
           android:paddingBottom="0dp"
           android:paddingLeft="4dp"
           android:gravity="left"
           android:layout_alignParentLeft="true"
           android:text="112 6176-200 Kroeschell \nAFMSA/711 HPW 099 Task nintynine Description"
           android:layout_below="@id/tv_rcl_ts_wkhsupdte_glcode" />
       <TextView
           android:id="@+id/tv_rcl_ts_wkhsupdte_labourtype"
           android:layout_width="250dp"
           android:layout_height="wrap_content"
           android:text="PM Program Manager2"
           android:textSize="12dp"
           android:paddingTop="0dp"
           android:paddingBottom="0dp"
           android:paddingLeft="4dp"
           android:layout_below="@id/tv_rcl_ts_wkhsupdte_taskdescription"
           android:layout_marginTop="0dp"/>
       <LinearLayout
           android:id="@+id/linear_btn"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_marginRight="4dp">
       <ImageButton
           android:id="@+id/imgbtn_rcl_ts_wkhsupdte_addnote"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:background="@drawable/add_task_note"
           android:layout_alignParentRight="true"
           android:layout_marginRight="4dp"
           android:visibility="gone"
           android:layout_centerVertical="true"/>
       <ImageButton
           android:id="@+id/imgbtn_rcl_ts_wkhsupdte_viewnote"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:background="@drawable/task_note"
           android:layout_marginRight="4dp"
           android:visibility="gone"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"/>
       </LinearLayout>
   </RelativeLayout>
    <EditText
        android:id="@+id/edtxt_rcl_ts_wkhsupdate_addhrs"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/relative_task"
        android:textCursorDrawable="@drawable/cursor_black"
        android:background="@null"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:hint="0.00"/>
<!--</RelativeLayout> -->
    </LinearLayout>
</android.support.constraint.ConstraintLayout>