<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#f2efef"
        app:layout_constraintVertical_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="#fcfbfb"
        android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_empnote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="Enter password to submit your Timesheet"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="13dp"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:text="Enter password"/>
        <EditText
            android:layout_marginTop="8dp"
            android:id="@+id/ed_pwd"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:background="#ffffff"/>
            <TextView
                android:id="@+id/tv_incorrectpwd"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="13dp"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:textColor="#ea8237"
                android:visibility="gone"
                android:text="Incorrect"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="#2e5772"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e9e3e3"></LinearLayout>
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:layout_weight="1"
                android:text="Submit"
                android:textColor="#2e5772"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>