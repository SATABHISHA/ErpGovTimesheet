<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_empnote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="2dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Supervisor Note"/>
                <ImageButton
                    android:id="@+id/imgbtn_close"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/close"/>
            </RelativeLayout>
            <EditText
                android:layout_marginTop="4dp"
                android:id="@+id/ed_addsup_note"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:gravity="top"
                android:layout_gravity="center"
                android:background="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_sup_cancel"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="#2e5772"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e9e3e3"></LinearLayout>
            <Button
                android:id="@+id/btn_sup_save"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:layout_weight="1"
                android:text="Done"
                android:textColor="#2e5772"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>