<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fcfffc"
        android:padding="1dp"
        android:layout_marginTop="0dp">
        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#f5f5f5"
            android:layout_marginTop="2dp"
            >
            <TextView
                android:id="@+id/tv_lv_dayname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Monday Apr 9"/>
            <ImageButton
                android:id="@+id/imgbtn_lv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_alignParentRight="true"/>
            <ImageButton
                android:id="@+id/imgbtn_lv_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/view"
                android:layout_toLeftOf="@id/imgbtn_lv_add"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_lv_hr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/imgbtn_lv_view"
                android:layout_marginRight="24dp"
                android:layout_centerVertical="true"
                android:textSize="15dp"
                android:textStyle="bold"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="0.0"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>