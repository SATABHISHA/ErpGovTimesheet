<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="#ede7e7"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_accountcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="2dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Note for Task (0250-000-00)"/>
                <ImageButton
                    android:id="@+id/imgbtn_close"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/close"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/ed_note"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:gravity="top"
                android:background="#d9d6d6"/>
                <ImageButton
                    android:id="@+id/imgbtn_edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="85dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edit_task_note"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_btns"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_sup_cancel"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="#2e5772"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e9e3e3"></LinearLayout>
            <Button
                android:id="@+id/btn_sup_save"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:layout_weight="1"
                android:text="Done"
                android:textColor="#2e5772"/>
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>