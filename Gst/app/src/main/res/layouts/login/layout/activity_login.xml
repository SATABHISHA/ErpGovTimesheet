<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#FFFFFF"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/sp_logo"
            android:layout_marginTop="40dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/input_background"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:background="#2e84bd">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/corp_id"
                    android:scaleType="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="15">
                <EditText
                    android:id="@+id/activity_login_edt_corp_ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rouned_broder"
                    android:paddingLeft="10dp"
                    android:hint="Corp-ID"
                    android:singleLine="true"
                    android:text="gst-inc-101"
                    android:imeOptions="actionNext"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/input_background"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:background="#2e84bd">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/username"
                    android:scaleType="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="15">
                <EditText
                    android:id="@+id/activity_login_edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rouned_broder"
                    android:paddingLeft="10dp"
                    android:hint="Username"
                    android:singleLine="true"
                    android:text="ob"
                    android:imeOptions="actionNext"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/input_background"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:background="#2e84bd">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/password" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="15">
                <EditText
                    android:id="@+id/activity_login_edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rouned_broder"
                    android:paddingLeft="10dp"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/activity_login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:background="#2e5772"
            android:text="Login"
            android:padding="5dp"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/activity_login_chk"
                    android:layout_width="wrap_content"
                    android:checked="false"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Stay signed in"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#FF2e5772"
                    android:gravity="center|left"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="40">
                <TextView
                    android:id="@+id/activity_login_btn_forgot_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="Can't access your account ?"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FF2e5772"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright \u00A9 2019 All Rights Reserved.\nGlobal System Technologies Inc."
            android:textColor="#FF2e5772"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>

</RelativeLayout>