<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <RelativeLayout
            android:background="#2e5772"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter Employee"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:textSize="27dp"
                android:layout_centerVertical="true"/>
            </RelativeLayout>

        <CheckBox android:id="@+id/checkbox_not_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Not Started"/>
        <CheckBox android:id="@+id/checkbox_saved"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved"/>
        <CheckBox android:id="@+id/checkbox_correctionrequired"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correction Required"/>
        <CheckBox android:id="@+id/checkbox_posted"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted"/>
        <CheckBox android:id="@+id/checkbox_submitted"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submitted"/>
        <CheckBox android:id="@+id/checkbox_partiallyreturn"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partially Return"/>
        <CheckBox android:id="@+id/checkbox_approved"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approved"/>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>