<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:background="#2e5772"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter Employee"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
<LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_below="@id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp">
        <CheckBox android:id="@+id/checkbox_not_started"
            android:textSize="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textStyle="normal"
            android:layout_marginLeft="10dp"
            android:text="Not Started"/>
        <CheckBox android:id="@+id/checkbox_saved"
            android:layout_marginTop="5dp"
            android:textSize="19dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textStyle="normal"
            android:text="Saved"/>
    <CheckBox android:id="@+id/checkbox_submitted"
        android:layout_marginTop="5dp"
        android:textSize="19dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#808080"
        android:textStyle="normal"
        android:text="Submitted"/>
        <CheckBox android:id="@+id/checkbox_returned"
            android:layout_marginTop="5dp"
            android:textSize="19dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textStyle="normal"
            android:text="Returned"/>
    <CheckBox android:id="@+id/checkbox_approved"
        android:layout_marginTop="5dp"
        android:textSize="19dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#808080"
        android:textStyle="normal"
        android:text="Approved"/>
        <CheckBox android:id="@+id/checkbox_posted"
            android:layout_marginTop="5dp"
            android:textSize="19dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textStyle="normal"
            android:text="Posted"/>

        <CheckBox android:id="@+id/checkbox_partiallyreturn"
            android:layout_marginTop="5dp"
            android:textSize="19dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textStyle="normal"
            android:text="Partially Returned"/>

        <CheckBox android:id="@+id/checkbox_partially_approved"
            android:layout_marginTop="5dp"
            android:textSize="19dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textStyle="normal"
            android:text="Partially Approved"/>
    <RadioGroup
        android:layout_marginTop="50dp"
        android:id="@+id/groupradio"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radia_id1"
        android:text="Active"
        android:textColor="#808080"
        android:textStyle="normal"
        android:textSize="20dp"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/radia_id2"
        android:text="ALL"
        android:textColor="#808080"
        android:textStyle="normal"
        android:textSize="20dp"/>
    </RadioGroup>
</LinearLayout>
        <Button
            android:id="@+id/btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@id/linearLayout1"
            android:textSize="17dp"
            android:text="Apply"
            />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>