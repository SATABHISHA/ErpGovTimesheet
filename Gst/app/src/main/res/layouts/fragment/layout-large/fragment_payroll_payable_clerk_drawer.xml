<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:background="#2e5772"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter Employee"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:textSize="27dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/relativeLayout2"
            android:layout_below="@id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <CheckBox android:id="@+id/checkbox_not_started"
                android:layout_marginTop="10dp"
                android:textSize="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:layout_marginLeft="10dp"
                android:text="Not Started"/>
            <CheckBox android:id="@+id/checkbox_saved"
                android:layout_marginTop="10dp"
                android:textSize="24dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="Saved"/>
            <CheckBox android:id="@+id/checkbox_submitted"
                android:layout_marginTop="10dp"
                android:textSize="24dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="Submitted"/>
            <CheckBox android:id="@+id/checkbox_returned"
                android:layout_marginTop="10dp"
                android:textSize="24dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="Returned"/>
            <CheckBox android:id="@+id/checkbox_approved"
                android:layout_marginTop="10dp"
                android:textSize="24dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="Approved"/>
            <CheckBox android:id="@+id/checkbox_posted"
                android:layout_marginTop="10dp"
                android:textSize="24dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="Posted"/>

            <CheckBox android:id="@+id/checkbox_partiallyreturn"
                android:layout_marginTop="10dp"
                android:textSize="24dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="Partially Return"/>

            <CheckBox android:id="@+id/checkbox_partially_approved"
                android:layout_marginTop="10dp"
                android:textSize="24dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="Partially Approved"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_below="@id/relativeLayout2"
            android:textSize="19dp"
            android:text="Apply"
            />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>